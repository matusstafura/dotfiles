# safe only

alias rzs="source ~/.zshrc"
alias rvi="source ~/.vimrc"
alias apr="sudo service apache2 restart"
alias htt="httrack"
alias jpo="jpegoptim -s -m 95 *.{jpeg,jpg}"

# Laravel

alias tin="php artisan tinker"
alias mco="php artisan make:controller"
alias mmo="php artisan make:model"

alias pp="phpunit"
alias ppf="phpunit --filter"
alias ppd="phpunit --testdox"

# Magento
alias bms="bin/magento module:status"
alias bme="bin/magento module:enable"
alias bmd="bin/magento module:disable"

alias bcf="bin/magento cache:flush"
alias bce="bin/magento cache:enable"
alias bcd="bin/magento cache:disable"

alias ixs="bin/magento indexer:reindex"

alias com="bin/magento setup:di:compile"
alias dpl="bin/magento setup:static-content:deploy"
alias upg="bin/magento setup:upgrade"

alias bdd="bin/magento deploy:mode:set developer"
alias bdp="bin/magento deploy:mode:set production"

alias css="vim app/design/frontend/Svart/Svan/web/css/theme.css"
alias trs="bin/magento i18n:pack --mode=replace --allow-duplicates sk_SK.csv sk_SK && bcf"
alias trc="bin/magento i18n:pack --mode=replace --allow-duplicates cs_CZ.csv cs_CZ && bcf"
alias cho="chown -R matus:www-data ."
alias chm="chmod -R 777 var generated pub"

# git aliases
alias gfr="git init && git add . && git commit -m 'first init'"
alias nah="git reset --hard && git clean -df"
alias ame="git commit --amend --no-edit"
alias gmrd="git merge dev"
alias gpsm="git push origin master"
alias gplm="git pull origin master"
alias gpsd="git push origin dev"
alias gpld="git pull origin dev"
alias gst="git status"
alias gcm="git commit -m"
alias gcl="git clone"
alias gch="git checkout"
alias gmm="git checkout master"
alias gdd="git checkout dev"
alias gad="git add"
alias gaa="git add ."
alias gdf="git diff"
alias gsh="git show"
alias glo="git log --oneline --graph"

# functions
bak() { cp "$1" "$1.bak"; ls -la "$1" "$1.bak"; }
dup() { cp -R "$1" "$1-copy"; ls -la "$1" "$1.copy"; }
grp() { grep -R "$1" "$2"; }
mkc() { mkdir "$1"; cd "$1"; }

