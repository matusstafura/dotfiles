alias grh="git reset --hard HEAD~1"
alias gmrd="git merge dev"
alias gmrm="git merge main"
alias gst="git status"
alias gcm="git commit -m"
alias gcl="git clone"
alias gch="git checkout"
alias gdf="git diff"
alias gsh="git show"
alias glo="git log --oneline --graph"
