# apps and languages
alias d="cd $HOME/Downloads/"
alias k="kubectl"
alias m="minikube"
alias o="cd $HOME/Obsidian/Legacy/"
alias p="python3"
alias r="ranger"
alias s="cd $HOME/Sites/"
alias t="tmux"
alias v="nvim"
alias x="cd $HOME/Sites/temp/"

alias cpp="g++ -std=c++17"

alias yvid="yt-dlp -f best"
alias yaud="yt-dlp --extract-audio -f best --audio-format m4a"
alias ymp3="yt-dlp --extract-audio -f best --audio-format mp3"

# "C" composer
alias cod="composer dump-autoload"
alias coi="composer install"
alias coo="composer outdated"
alias cor="composer require"
alias cou="composer update"

# "D" dotfiles
alias drz="source $HOME/.zshrc"
alias dvz="v $HOME/dotfiles/zsh/zshrc"
alias dva="v $HOME/dotfiles/.aliases"
alias dot="cd $HOME/dotfiles"

# other
alias jpo="jpegoptim -s -m 95 *.{jpeg,jpg}"
alias ren="find . -type f -exec mv {} {}.$1 \;"
alias del="find . -type f -name '*.$1' -delete"
alias own="find . -type f ! -name '*.$1' -delete"
alias ela="~/elasticsearch/bin/elasticsearch"
alias nrd="npm run dev"

# Laravel
alias art="php artisan"
alias pp="./vendor/bin/phpunit"
alias pest="./vendor/bin/pest"

# Magento
alias bms="bin/magento module:status"
alias bme="bin/magento module:enable"
alias bmd="bin/magento module:disable"
alias bcf="bin/magento cache:flush"
alias bce="bin/magento cache:enable"
alias bcd="bin/magento cache:disable"
alias ixs="bin/magento indexer:reindex"
alias bco="bin/magento setup:di:compile"
alias bpl="bin/magento setup:static-content:deploy"
alias upg="php -d memory_limit=12G bin/magento setup:upgrade"
alias bdd="bin/magento deploy:mode:set developer"
alias bdp="bin/magento deploy:mode:set production"
alias dep="php -d memory_limit=12G bin/magento setup:static-content:deploy -f en_US sk_SK"

