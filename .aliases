# safe only

# "C" composer
alias cod="composer dump-autoload"
alias coi="composer install"
alias coo="composer outdated"
alias cor="composer require"
alias cou="composer update"

# "D" dotfiles
alias drz="source ~/.zshrc"
alias dvz="v ~/Sites/dotfiles/zsh/zshrc"
alias dva="v ~/Sites/dotfiles/.aliases"
alias dot="cd ~/Sites/dotfiles"

# apps and languages
alias c="code ."
alias p="python3"
alias pip="pip3"
alias r="ranger"
alias s="subl ."
alias v="nvim"

# other
alias jpo="jpegoptim -s -m 95 *.{jpeg,jpg}"
alias toh="find . -type f -exec mv {} {}.html \;"

# Laravel
alias art="php artisan"
alias pp="./vendor/bin/phpunit"
alias ps="./vendor/bin/pest"

# Magento
alias bms="bin/magento module:status"
alias bme="bin/magento module:enable"
alias bmd="bin/magento module:disable"
alias bcf="bin/magento cache:flush"
alias bce="bin/magento cache:enable"
alias bcd="bin/magento cache:disable"
alias ixs="bin/magento indexer:reindex"
alias bco="bin/magento setup:di:compile"
alias bpl="bin/magento setup:static-content:deploy"
alias upg="bin/magento setup:upgrade"
alias bdd="bin/magento deploy:mode:set developer"
alias bdp="bin/magento deploy:mode:set production"

